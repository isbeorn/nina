<UserControl x:Class="NINA.Sequencer.Logic.ExprStepperControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:NINA.Sequencer.Logic" 
        xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core">

    <StackPanel 
        Orientation="Horizontal">
        <TextBlock Margin="5,5,8,0" Text="{ns:Loc LblValue}" />
        <Button Height="25" Click="SubtractClick">
            <Path
                Width="20"
                Margin="5"
                Data="{StaticResource SubstractSVG}"
                Fill="{StaticResource ButtonForegroundBrush}"
                Stretch="Uniform"
                UseLayoutRounding="True" />
        </Button>
        <local:ExprControl Exp="{Binding ValueExpression}" />
        <Button Height="25" Click="AddClick" DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ExprStepperControl}}}"
            >
            <Path
                Width="20"
                Margin="5"
                Data="{StaticResource AddSVG}"
                Fill="{StaticResource ButtonForegroundBrush}"
                Stretch="Uniform"
                UseLayoutRounding="True" />
        </Button>
    </StackPanel>

</UserControl>
