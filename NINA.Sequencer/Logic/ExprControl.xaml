        </TextBlock>
        
        <local:WhenTextBox
                MinWidth="32"
                Margin="5,1,0,-5"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Foreground="{StaticResource PrimaryBrush}"
                TextAlignment="Center"
                ToolTip="" 
                ToolTipOpening="ShowSymbols" >
            <local:WhenTextBox.HintText>
                <Binding Mode="OneWay" Path="Exp.Default" UpdateSourceTrigger="PropertyChanged"/>
            </local:WhenTextBox.HintText>
            <local:WhenTextBox.Text>
                <Binding Mode="TwoWay" Path="Exp.Definition" />
            </local:WhenTextBox.Text>
        </local:WhenTextBox>
 
        <TextBlock VerticalAlignment="Center"
                   Margin="0,2,0,0"
                   Visibility="{Binding Exp.IsAnnotated, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}" >>
            <TextBlock.Text>
                <MultiBinding Converter="{StaticResource ec}">
                    <Binding Path="Exp"  />
                    <Binding Path="Exp.ValueString"  />
                </MultiBinding>
            </TextBlock.Text>
            <TextBlock.Foreground>
                <MultiBinding Converter="{StaticResource vc}">
                    <Binding Path="Exp"  />
                    <Binding Path="Exp.ValueString"  />
